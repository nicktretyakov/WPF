<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AttemptWpfDef.Styles">
    
    <Style x:Key="CaptionStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#282828"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Background" Value="#EAEAFF"/>
        <Setter Property="Padding" Value="50,7,0,0"/>
    </Style>

</ResourceDictionary>